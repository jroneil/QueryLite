# Database Configuration
POSTGRES_USER=querylite
POSTGRES_PASSWORD=querylite_secret
POSTGRES_DB=querylite
DATABASE_URL=postgresql://querylite:querylite_secret@localhost:5432/querylite

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
LLM_PROVIDER=openai

# Encryption key for connection strings (must be exactly 32 characters)
ENCRYPTION_KEY=dev-encryption-key-32chars-xyz!

# NextAuth Security (Required for Auth to work)
# Use a random string for NEXTAUTH_SECRET
NEXTAUTH_SECRET=local_development_secret_key_123
NEXTAUTH_URL=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Email/SMTP Configuration
EMAIL_PROVIDER=smtp
# SMTP Settings (Default to MailHog for local dev)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_STARTTLS=false
SMTP_FROM=reports@querylite.ai

# Gmail SMTP Example (requires App Password):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USE_STARTTLS=true
# SMTP_USERNAME=your@gmail.com
# SMTP_PASSWORD=your-google-app-password